            active_workspace   #333333 #5f676a #ffffff
            inactive_workspace #333333 #222222 #888888
            urgent_workspace   #2f343a #900000 #ffffff
        }
        # https://github.com/tobi-wan-kenobi/bumblebee-status
        position top
         status_command /home/ernesto/.local/bin/bumblebee-status \
         -m spacer git cpu battery brightness bluetooth time date \
         pasink  pasource \
         -p time.format="%H:%M" date.format="%a, %b %d %Y" spacer.text="Ernesto Caceres" \
         -t powerline 
         # -t powerline
        # status_command polybar

}

